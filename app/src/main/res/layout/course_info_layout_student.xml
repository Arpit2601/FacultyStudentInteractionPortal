<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_courseinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_courseinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="14dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_courseinfo_courseid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="courseid"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_courseinfo_coursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textColor="#555"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_courseinfo_profname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof Name" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>