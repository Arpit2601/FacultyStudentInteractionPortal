<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_occupation"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spn_department"
        android:layout_width="243dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_rollnumber"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="5dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_below="@+id/et_password"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView12"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Roll No :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_rollnumber"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView13"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="Re-enter  :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        android:text="Password :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_year"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="-1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="21dp"
        android:text="Year :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_year"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rollnumber"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:text="Department:"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="Occupation :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        android:text="Name :"
        android:textAlignment="textStart"
        android:textColor="#344955"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="27dp"
        android:text="E-mail :"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="#344955" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-3dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/buttonstyle"
        android:text="Sign Up"
        android:textColor="@android:color/white" />

</RelativeLayout>
